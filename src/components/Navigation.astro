---
// src/components/Navigation.astro
interface NavLink {
  label: string;
  href: string;
}

const navLinks: NavLink[] = [
  { label: 'Pottery Store', href: '/' },
  { label: 'Candle Store', href: '/candle-store' },
  { label: 'Art Studio', href: '/art-studio' },
  { label: 'Pottery Classes', href: '/pottery-classes' },
  { label: 'FAQ', href: '/faq' },
];
---

<nav class="navbar">
  <div class="nav-container">
    <div class="logo">
      <a href="/">
        <h1>Made @ The Local Pottery and Candle Studio</h1>
        <p class="logo-subtitle">Centerville, TN</p>
      </a>
    </div>
    <ul class="nav-menu">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class={Astro.url.pathname === link.href ? 'active' : ''}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a href="#contact" class="cta-button">Contact</a>
      </li>
    </ul>
  </div>
</nav>

<style>
  .navbar {
    background-color: var(--white);
    box-shadow: var(--shadow);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100px;
  }

  .logo {
    flex-shrink: 0;
  }

  .logo a {
    text-decoration: none;
    color: var(--dark);
  }

  .logo h1 {
    font-size: 1rem;
    margin: 0 0 0.25rem 0;
    color: var(--brown);
    font-weight: 700;
    line-height: 1.2;
  }

  .logo-subtitle {
    font-size: 0.75rem;
    color: #666;
    margin: 0;
    font-weight: 400;
    line-height: 1.2;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    align-items: center;
  }

  .nav-menu a {
    color: var(--dark);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-menu a:hover,
  .nav-menu a.active {
    color: var(--brown);
  }

  .cta-button {
    background-color: var(--brown) !important;
    color: var(--white) !important;
    padding: 0.75rem 1.5rem !important;
    border-radius: 4px;
    display: inline-block;
  }

  .cta-button:hover {
    background-color: var(--red) !important;
    color: var(--white) !important;
  }

  @media (max-width: 768px) {
    .nav-container {
      height: auto;
      padding: 1rem 20px;
      flex-direction: column;
      gap: 1rem;
    }

    .nav-menu {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .nav-menu a {
      font-size: 0.9rem;
    }
  }
</style>
