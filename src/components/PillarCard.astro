---
// src/components/PillarCard.astro

export interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
  linkText?: string;
}

const { title, description, icon, href, linkText = 'Explore â†’' } = Astro.props;
---

<div class="pillar-card">
  <div class="pillar-icon">{icon}</div>
  <h3>{title}</h3>
  <p>{description}</p>
  <a href={href} class="card-link">{linkText}</a>
</div>

<style>
  .pillar-card {
    background: var(--white);
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: var(--shadow);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .pillar-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-5px);
  }

  .pillar-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .pillar-card h3 {
    color: var(--dark);
    margin-bottom: 1rem;
  }

  .pillar-card p {
    color: var(--text-light);
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .card-link {
    color: var(--brown);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .card-link:hover {
    color: var(--red);
  }
</style>
