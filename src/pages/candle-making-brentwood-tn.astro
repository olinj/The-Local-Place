  }

  .content-block a {
    color: var(--brown);
    text-decoration: none;
    font-weight: 600;
  }

  .content-block a:hover {
    text-decoration: underline;
  }

  .content-block ul {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .content-block li {
    margin-bottom: 0.5rem;
  }

  .testimonials {
    margin: 4rem 0;
  }

  .testimonials h2 {
    color: var(--brown);
    text-align: center;
    margin-bottom: 2rem;
  }

  .testimonial-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background: var(--cream);
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid var(--brown);
  }

  .testimonial-card p {
    margin-bottom: 0.75rem;
    line-height: 1.8;
  }

  .testimonial-card p strong {
    color: var(--brown);
  }

  .benefits-section {
    margin: 4rem 0;
  }

  .benefits-section h2 {
    color: var(--brown);
    text-align: center;
    margin-bottom: 2rem;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .benefit-item {
    background: var(--light-gray);
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
  }

  .benefit-item h3 {
    color: var(--brown);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .benefit-item p {
    line-height: 1.8;
  }

  .faq-section {
    margin: 4rem 0;
  }

  .faq-section h2 {
    color: var(--brown);
    text-align: center;
    margin-bottom: 2rem;
  }

  .faq-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background: white;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    cursor: pointer;
    background: var(--light-gray);
    font-weight: 600;
    color: var(--dark);
    user-select: none;
  }

  .faq-question:hover {
    background: #efefef;
  }

  .toggle-icon {
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .faq-item[open] .toggle-icon {
    transform: rotate(45deg);
  }

  .faq-answer {
    padding: 1.5rem;
    border-top: 1px solid #ddd;
  }

  .faq-answer p {
    line-height: 1.8;
    margin-bottom: 0;
