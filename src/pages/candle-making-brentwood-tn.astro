  .hero-cta {
    display: inline-block;
    background-color: var(--brown);
    color: white;
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .hero-cta:hover {
    background-color: var(--red);
  }

  .location-intro {
    background: var(--light-gray);
    padding: 2rem;
    border-radius: 8px;
    margin: 3rem 0;
  }

  .location-intro h2 {
    color: var(--brown);
    margin-bottom: 1rem;
  }

  .location-intro p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .content-block {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid var(--brown);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .content-block h3 {
    color: var(--brown);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .content-block p {
