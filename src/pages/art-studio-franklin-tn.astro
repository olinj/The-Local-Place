<style>
  .hero {
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/hero-bg.jpg');
    background-size: cover;
    background-position: center;
    padding: 6rem 2rem;
    text-align: center;
    color: white;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: white;
  }

  .hero-content p {
    font-size: 1.3rem;
    margin-bottom: 2rem;
  }

  .hero-cta {
    display: inline-block;
    background-color: var(--brown);
    color: white;
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .hero-cta:hover {
    background-color: var(--red);
  }

  .location-intro {
    background: var(--light-gray);
    padding: 2rem;
    border-radius: 8px;
    margin: 3rem 0;
  }

  .location-intro h2 {
    color: var(--brown);
    margin-bottom: 1rem;
  }

  .location-intro p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .content-block {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid var(--brown);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .content-block h3 {
    color: var(--brown);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .content-block p {
    margin-bottom: 0.75rem;
    line-height: 1.8;
  }

  .content-block a {
    color: var(--brown);
    text-decoration: none;
    font-weight: 600;
  }

  .content-block a:hover {
    text-decoration: underline;
  }

  .content-block ul {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .content-block li {
    margin-bottom: 0.5rem;
  }

  .testimonials {
    margin: 4rem 0;
  }

  .testimonials h2 {
    color: var(--brown);
    text-align: center;
    margin-bottom: 2rem;
  }

  .testimonial-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background: var(--cream);
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid var(--brown);
  }

  .testimonial-card p {
    margin-bottom: 0.75rem;
    line-height: 1.8;
  }

  .testimonial-card p strong {
    color: var(--brown);
  }

  .faq-section {
    margin: 4rem 0;
  }

  .faq-section h2 {
    color: var(--brown);
    text-align: center;
    margin-bottom: 2rem;
  }

  .faq-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background: white;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    cursor: pointer;
    background: var(--light-gray);
    font-weight: 600;
    color: var(--dark);
    user-select: none;
  }

  .faq-question:hover {
    background: #efefef;
  }

  .toggle-icon {
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .faq-item[open] .toggle-icon {
    transform: rotate(45deg);
  }

  .faq-answer {
    padding: 1.5rem;
    border-top: 1px solid #ddd;
  }

  .faq-answer p {
    line-height: 1.8;
    margin-bottom: 0;
  }

  .cta-section {
    background: var(--light-gray);
    padding: 3rem 2rem;
    border-radius: 8px;
    text-align: center;
    margin: 4rem 0;
  }

  .cta-section h2 {
    color: var(--brown);
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .cta-button {
    display: inline-block;
    background-color: var(--brown);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: var(--red);
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }

    .hero-content p {
      font-size: 1rem;
    }

    .content-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
