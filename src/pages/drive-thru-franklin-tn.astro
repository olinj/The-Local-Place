<style>
  .content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .content-block {
    background: var(--light-gray);
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 4px solid #8b4513;
  }

  .content-block h3 {
    margin-top: 0;
    color: var(--dark);
  }

  .content-block a {
    color: #8b4513;
    text-decoration: none;
    font-weight: 600;
  }

  .content-block a:hover {
    color: var(--red);
  }

  .testimonial-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .testimonial-card {
    background: var(--cream);
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 4px solid #8b4513;
  }

  .testimonial-card p {
    margin-bottom: 0.5rem;
    line-height: 1.8;
  }

  .testimonial-card p:first-child {
    font-style: italic;
    color: var(--text-light);
  }

  .testimonial-card p:last-child {
    font-weight: 600;
    color: var(--dark);
  }

  .why-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .why-item {
    background: var(--light-gray);
    padding: 1.5rem;
    border-radius: 8px;
  }

  .why-item h3 {
    margin-top: 0;
    color: var(--dark);
  }

  .why-item p {
    margin-bottom: 0;
    color: var(--text-light);
  }

  .faq-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .faq-item {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background: var(--white);
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    cursor: pointer;
    background: var(--light-gray);
    font-weight: 600;
    color: var(--dark);
    user-select: none;
    transition: all 0.3s ease;
  }

  .faq-question:hover {
    background: #efefef;
  }

  .toggle-icon {
    flex-shrink: 0;
    margin-left: 1rem;
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .faq-item[open] .toggle-icon {
    transform: rotate(45deg);
  }

  .faq-answer {
    padding: 1.5rem;
    background: var(--white);
    border-top: 1px solid #ddd;
    line-height: 1.8;
    color: var(--text-light);
  }

  .menu-preview {
    background: var(--light-gray);
    padding: 2rem;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .cta-section {
    background: var(--light-gray);
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    margin-top: 3rem;
  }

  .cta-button {
    display: inline-block;
    background: #8b4513;
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    margin-top: 1rem;
    transition: background 0.3s ease;
  }

  .cta-button:hover {
    background: #6b3410;
  }

  @media (max-width: 768px) {
    .content-grid {
      grid-template-columns: 1fr;
    }

    .testimonial-cards {
      grid-template-columns: 1fr;
    }

    .why-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
