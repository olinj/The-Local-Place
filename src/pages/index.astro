      </div>
    </div>
  </section>

  <!-- THREE PILLARS SECTION -->
  <section class="three-pillars">
    <div class="container">
      <h2>What We Offer</h2>
      <div class="pillars-grid">
        {pillars.map((pillar) => (
          <PillarCard {...pillar} />
        ))}
      </div>
    </div>
  </section>

  <!-- WHY CHOOSE US SECTION -->
  <section class="why-choose-us">
    <div class="container">
      <h2>Why Choose The Local Place</h2>
      <div class="why-grid">
        {whyChooseUs.map((item) => (
          <div class="why-item">
            <h3>{item.icon} {item.title}</h3>
            <p>{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- POTTERY SERVICES SECTION -->
  <section id="pottery-services" class="pottery-services">
    <div class="container">
      <h2>Pottery Store Services</h2>
      <p class="section-intro">Explore our 9 unique pottery painting experiences. Professional ceramic paints, brushes, and kiln-firing included with every service.</p>
