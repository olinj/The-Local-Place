    <div class="hero-content">
      <h1>Pottery Store Centerville TN</h1>
      <p>Where Creativity, Coffee, and Community Come Together</p>
      <a href="/pottery-store" class="hero-cta">Explore Our Studio</a>
    </div>
  </section>

  <!-- BUSINESS INFORMATION -->
  <section class="business-info">
    <div class="container">
      <div class="business-card">
        <h2>Made @ The Local Pottery and Candle Studio</h2>
