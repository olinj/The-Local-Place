  </div>
</BaseLayout>

<style>
  .why-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .why-item {
    padding: 1.5rem;
    background: var(--light-gray);
    border-radius: 8px;
  }

  .why-item h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    color: var(--dark);
  }

  .why-item p {
    margin-bottom: 0;
    color: var(--text-light);
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .info-block {
    background: var(--cream);
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 4px solid #8b4513;
  }

  .info-block h3 {
    margin-top: 0;
    color: var(--dark);
  }

  .info-block p {
    margin-bottom: 0.5rem;
    line-height: 1.8;
  }

  .info-block a {
    color: var(--brown);
    font-weight: 600;
    text-decoration: none;
  }

  .info-block a:hover {
    color: var(--red);
  }

  .testimonial-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .testimonial-card {
    background: var(--cream);
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 4px solid #8b4513;
  }

  .testimonial-card p {
    margin-bottom: 0.5rem;
    line-height: 1.8;
  }

  .testimonial-card p:first-child {
    font-style: italic;
    color: var(--text-light);
  }

  .testimonial-card p:last-child {
    font-weight: 600;
    color: var(--dark);
  }

  .featured-items {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid var(--light-gray);
  }

  /* Background colors for menu items */
  .coffee-bg {
    background: linear-gradient(135deg, #d4a574 0%, #8b6f47 100%);
  }

  .pastry-bg {
    background: linear-gradient(135deg, #f4d4a8 0%, #d9a574 100%);
  }

  .breakfast-bg {
    background: linear-gradient(135deg, #ffa07a 0%, #ff8c42 100%);
  }

  .lunch-bg {
    background: linear-gradient(135deg, #90ee90 0%, #7cb342 100%);
  }

  .icecream-bg {
    background: linear-gradient(135deg, #a8d8d8 0%, #7ab8ba 100%);
  }

  .beverage-bg {
    background: linear-gradient(135deg, #dda15e 0%, #c1666b 100%);
  }

  @media (max-width: 768px) {
    .info-grid {
      grid-template-columns: 1fr;
    }

    .why-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
